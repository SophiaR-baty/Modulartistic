<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>Modulartistic</RootNamespace>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AnimatedGif" Version="1.0.5" />
    <PackageReference Include="BitmapToVector" Version="1.16.3" />
    <PackageReference Include="CoreCLR-NCalc" Version="2.2.110" />
    <PackageReference Include="Melanchall.DryWetMidi" Version="6.1.4" />
    <PackageReference Include="OpenCvSharp4" Version="4.7.0.20230115" />
    <PackageReference Include="OpenCvSharp4.runtime.win" Version="4.7.0.20230115" />
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Gif.Components">
      <HintPath>..\NGif-master\Components\bin\Debug\Gif.Components.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ImageFunctions\ImageFunctions.csproj" />
    <ProjectReference Include="..\MathFunctions\MathFunctions.csproj" />
    <ProjectReference Include="..\VectorImageFunctions\VectorImageFunctions.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="md $(OutDir)\Output&#xD;&#xA;md $(OutDir)\demofiles&#xD;&#xA;&#xD;&#xA;xcopy /s /e /y demofiles $(OutDir)\demofiles" />
  </Target>

</Project>
